<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Seller Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/b06605e970.js"></script>
    <link rel="stylesheet"  href="/public/assets/main.css">
    <script src="/public/scripts/index.js"></script>
 
   
   
</head>
<body>
    
    <div class="container">
        <div class="sellerPanel">
            <div class="row justify-content-between">
                <div class="col col1 navigation col-2">
                    <nav>
                      
                        <ul>
                            <li><img src="https://img.icons8.com/bubbles/2x/user-male.png" alt="img"></li>
                            <li>Saller Panel</li>
                            
                            <li id="dashboard"><i class="fas fa-home"></i><a href="#" >Dashboard</a></li>
                            <li id="product"><i class="fas fa-th-large"></i><a href="#">Products</a></li>
                            <li id="back"><i class="fas fa-door-open"></i><a href="#">Back</a></li>
                          
                        </ul>
                      
                    </nav>
                </div>
                <div class="col col2 main-section col-10">
                    <div class="row">
                    <div class="searchbar col">
                    <nav>
                    <form class="d-flex" action='/searchproduct' method='post'>
                    <input class="form-control me-2" type="search" name='pcode' required placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success" type="submit" id="Search_Product">Search</button>
                  </form>
                </nav>
                </div>
            </div>
             
         <div id="form_dash">        
                 <div class="form row justify-content-between">
                
                <div class="col input col1 col-6">
                
                        
                 <form method="post" enctype="multipart/form-data">
                    <div class="form-group">
                    <input class="form-control me-2" type="file"  name="imgname" id="Product_Image" required aria-label="Product Image">
                </div>
                <div class="form-group">
                    <input class="form-control me-2" type="text"  value="<%= product[0].pcode %>" name="pcode" id="Product_Code" placeholder="Product Code" required aria-label="Product Code">
                </div>
                <div class="form-group">
                    <input class="form-control me-2" type="text" value="<%= product[0].pname %>" name="pname" id="Product_Name" placeholder="Product Name" required aria-label="Product Name">
                </div>
                
                <div class="form-group">
                    <input class="form-control me-2" type="text" value="<%= product[0].pprice %>" name="pprice" id="Product_Price" placeholder="Product Price" required aria-label="Product Price">
                </div>
                
                <div class="form-group">
                    <textarea cols="4" rows="4" class="form-control me-2"  name="pdescription" id="Product_Des" placeholder="Product Description" required aria-label="Product Description"><%= product[0].pdescription %></textarea>
                </div>
                                
                
                
                <div class="buttons col-12 form-group">
                      <ul class="d-flex justify-content-between form-group">
                          <li><button class="btn btn-outline-primary" value='upload' formaction="/addproduct" id="Add_Product" type="submit" >Add</button></li>
                          <li><button class="btn btn-outline-warning" value="<%= product[0]._id %>" id="Edit_Product" name='id' formaction="/updateproduct" >Update</button></li>
                 
                      </ul>  
                </div>
            </form>
          
                </div>
                
                <div class="col col2 col-6">
                    <h3>Recent Added</h3>
                    <div class="row no-flex recent-Product">
                  
                           <% let count=0;
                           products.forEach(data=>{
                            count++;
                            if(count!=4){
                            %>
                           
                            <div class="col">
                                 <div class="card mb-3" style="max-width: 450px;">
                                        <div class="row g-0">
                                          <div class="col-md-4">
                                              <div class="col product_img">
                                            <img src="../public/images/<%= data.imgname %>" alt="...">
                                          </div>
                                        </div>
                                          <div class="col-md-8">
                                            <div class="card-body">
                                              <h5 class="card-title"><%= data.pname %></h5>
                                              <p class="card-text pro_des"><%= data.pdescription %></p>
                                              <p class="card-text pro_price"><%= data.pprice %>Rs</p>
                                            </div>
                                          </div>
                                        </div>
                                      </div>
                              
                              </div>
                          <% }
                        
                        });%>
                           
                   
                   </div>
                   </div>
            </div>

               
                   
            </div>
        
        <div class="col col-12" id="product_Dash">
            <div class="row">
            <% products.forEach(data=>{ %>
                
                <div class="col col-4">
            <div class="card" style="width: 18rem;">
                <form method="post">
               <button formaction="/editproduct" name="id" class='edit' value="<%= data._id %>"><i class="far fa-edit"></i></button>
            
               <button formaction="/deleteproduct" name="id" value="<%= data._id %>"><i class="far fa-trash-alt"></i></button>
            </form>
                <div class="img row justify-content-center">
                    <div class="col col-6">
                <img src="../public/images/<%=data.imgname %>" class="card-img-top" alt="...">
            </div>
                </div>
                <div class="card-body">
                 
                    <h5 class="card-title"><%=data.pname%></h5>
                  <p class="card-text"><%=data.pdescription%></p>
                  <h6><%=data.pprice%>Rs</h6>
                 
                </div>
              </div>
            </div>
              <% }); %> 
            </div>
        </div>

        

                </div>
              
                </div>
                </div>
            </div>
        
</body>
</html>